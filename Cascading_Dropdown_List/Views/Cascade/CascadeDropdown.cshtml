@{
    ViewData["Title"] = "CascadeDropdown";
}


<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <h1>Cascade Dropdown List</h1>
            <form method="post">
                <div class="form-group">
                    <label>Country</label>
                    <select class="form-control" id="Country">
                        <option>--Select Country-- </option>
                    </select>
                </div>
                <br />
                <div class="form-group">
                    <label>State</label>
                    <select class="form-control" id="State">
                        <option>--Select First Country-- </option>
                    </select>
                </div>
                <br />
                <div class="form-group">
                    <label>City</label>
                    <select class="form-control" id="City">
                        <option>--Select First City-- </option>
                    </select>
                </div>
                <br />
                <div class="form-group">
                    <button type="submit" class="btn btn-sm btn-primary float-end">Save</button>
                </div>

            </form>
        </div>
    </div>
</div>
